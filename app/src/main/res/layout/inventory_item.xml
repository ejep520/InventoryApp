<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:id="@+id/inventory_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Sample Item Name" />

        <TextView
            android:id="@+id/inventory_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="999,999" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/inventory_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="$999.99"
            android:layout_gravity="end"/>

        <Button
            android:id="@+id/inventory_item_sale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sale_button_text"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/inventory_item_id"
        android:visibility="gone" />

</LinearLayout>